@model IEnumerable<PhoneStore.Models.news>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- slider -->
<div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <a href="#"><img class="d-block w-100" src="~/Image/1.png" alt="First slide"></a>
                        </div>
                        <div class="carousel-item">
                            <a href="#"><img class="d-block w-100" src="~/Image/2.png" alt="Second slide"></a>
                        </div>
                        <div class="carousel-item">
                            <a href="#"><img class="d-block w-100" src="~/Image/3.png" alt="Second slide"></a>
                        </div>

                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>

            <div class="col-lg-4 advertise">
                <div class="item">
                    <a href="#"><img src="~/Image/ipad-vtb-360x202.jpg" alt=""></a>
                </div>
                <div class="item">
                    <a href="#"><img src="~/Image/480.248.jpg" alt=""></a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end-slider -->

<!-- News Section -->
<div class="container mt-5">
    <h3 class="text-center font-weight-bold text-uppercase">Tin Tức Nổi Bật</h3>
    <div class="list-group mt-4">
        @foreach (var item in Model)
        {
            <a href="@Url.Action("Details", "News", new { id = item.id })" class="list-group-item list-group-item-action mb-2" style="margin-top: 30px; border-radius: 10px; border: 1px solid #ddd;">
                <div class="d-flex align-items-center">
                    <!-- Hình ảnh -->
                    <img src="~/image/@item.image_title" alt="Hình ảnh tin tức" class="rounded mr-3" width="150" height="100">

                    <!-- Nội dung tin tức -->
                    <div class="flex-grow-1">
                        <h5 class="mb-1 font-weight-bold">@item.title</h5>
                        <p class="text-muted small mb-1">
                            @(item.created_at.HasValue ? item.created_at.Value.ToString("dd/MM/yyyy") : "Không xác định")
                        </p>
                        <p class="mb-1 text-truncate" style="max-width: 800px;">
                            @Html.Raw(item.content.Length > 180 ? item.content.Substring(0, 180) + "..." : item.content)
                        </p>
                    </div>
                </div>
            </a>
        }
    </div>
</div>
<!-- End News Section -->
