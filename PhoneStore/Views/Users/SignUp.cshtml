@model PhoneStore.Models.user

@{
    ViewBag.Title = "Sign Up";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container signup-container">
    <div class="row">
        <div class="col-lg-6 d-none d-lg-block">
            <img src="~/image/sign-up-wal.jpg" class="sign-up-image" />
        </div>

        <div class="col-lg-6" style="margin-top: 50px; display: flex; flex-direction: column; align-items: center;">
            @using (Html.BeginForm("SignUp", "Users", FormMethod.Post, new { @class = "signup-form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <h2 class="signup-title" style="margin-bottom:30px; text-align: center;">Đăng ký tài khoản</h2>

                <div class="form-group">
                    @Html.TextBox("userName", null, new { @class = "form-control", placeholder = "Họ và tên", required = "required", style = "width: 350px;" })
                </div>

                <div class="form-group">
                    @Html.TextBox("userEmail", null, new { @class = "form-control", placeholder = "Email", type = "email", required = "required", style = "width: 350px;" })
                    @if (!string.IsNullOrEmpty(ViewBag.NotificationEmail))
                    {
                        <small class="text-danger">@ViewBag.NotificationEmail</small>
                    }
                </div>

                <div class="form-group">
                    @Html.TextBox("phoneNumber", null, new { @class = "form-control", placeholder = "Số điện thoại", type = "tel", pattern = "[0-9]{10}", required = "required", title = "Số điện thoại phải có 10 chữ số", style = "width: 350px;" })
                    @if (!string.IsNullOrEmpty(ViewBag.NotificationPhone))
                    {
                        <small class="text-danger">@ViewBag.NotificationPhone</small>
                    }
                </div>

                <div class="form-group">
                    @Html.Password("userPassword", null, new { @class = "form-control", placeholder = "Nhập mật khẩu", required = "required", minlength = "6", style = "width: 350px;" })
                    @if (!string.IsNullOrEmpty(ViewBag.NotificationPassword))
                    {
                        <small class="text-danger">@ViewBag.NotificationPassword</small>
                    }
                </div>

                <div class="form-group">
                    @Html.Password("rePassword", null, new { @class = "form-control", placeholder = "Nhập lại mật khẩu", required = "required", minlength = "6", style = "width: 350px;" })
                    @if (!string.IsNullOrEmpty(ViewBag.Notification))
                    {
                        <small class="text-danger">@ViewBag.Notification</small>
                    }
                </div>

                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="termsCheck" required>
                    <label class="form-check-label" for="termsCheck">Tôi đồng ý với điều khoản & điều kiện</label>
                </div>

                <button style="margin-top:10px; width: 350px;" type="submit" class="btn btn-primary btn-block">Đăng ký</button>

                <p class="text-center mt-3">
                    Đã có tài khoản? <a href="@Url.Action("Login", "Users")">Đăng nhập ngay</a>
                </p>
            }
        </div>
    </div>
</div>